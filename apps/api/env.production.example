# Palmera API - Production Environment Variables for Render

# Database (automatically provided by Render)
DATABASE_URL="postgresql://username:password@hostname:port/database"

# JWT & Authentication
JWT_SECRET="your-super-secure-jwt-secret-key-here"
JWT_EXPIRES_IN="7d"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# Server Configuration
NODE_ENV="production"
PORT=3002
API_URL="https://your-render-app.onrender.com"
CORS_ORIGINS="https://your-admin.vercel.app,https://your-provider.vercel.app"

# Stripe Payments
STRIPE_SECRET_KEY="sk_live_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_live_your_stripe_publishable_key"  
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Email Service (optional)
EMAIL_SERVICE_API_KEY="your-email-service-api-key"
EMAIL_FROM="noreply@yourdomain.com"

# File Upload (AWS S3)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-west-2"
AWS_S3_BUCKET="palmera-uploads"

# Monitoring & Logging
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
LOG_LEVEL="info"

# Feature Flags
ENABLE_SWAGGER="false"
ENABLE_RATE_LIMITING="true"
ENABLE_CORS="true"

# Redis (optional - for caching/sessions)
REDIS_URL="redis://username:password@hostname:port"
