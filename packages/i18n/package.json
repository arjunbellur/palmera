{
  "name": "@palmera/i18n",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup || npm run build:fallback",
    "build:fallback": "tsc && echo 'Built with TypeScript compiler as fallback'",
    "dev": "tsup --watch",
    "lint": "eslint . --ext .ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "i18next": "^23.4.0",
    "react-i18next": "^13.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.3.1",
    "eslint": "^8.0.0",
    "tsup": "^7.0.0",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-native": ">=0.72"
  }
}
