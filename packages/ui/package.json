{
  "name": "@palmera/ui",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./tailwind.preset.cjs": "./tailwind.preset.cjs",
    "./palmera-theme.css": "./palmera-theme.css"
  },
  "scripts": {
    "build": "tsup || npm run build:fallback",
    "build:fallback": "tsc && echo 'Built with TypeScript compiler as fallback'",
    "dev": "tsup --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.0",
    "@palmera/tokens": "workspace:*",
    "clsx": "^2.0.0",
    "react-hook-form": "^7.47.0",
    "tailwind-merge": "^2.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "eslint": "^8.0.0",
    "tsup": "^7.0.0",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-native": ">=0.72"
  }
}
